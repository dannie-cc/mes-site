{
    "compilerOptions": {
        "target": "ES2022",
        "lib": ["ES2022", "DOM", "DOM.Iterable"],

        "module": "ESNext",
        "moduleResolution": "Bundler",

        "jsx": "react-jsx",

        "strict": true,
        "isolatedModules": true,
        "useDefineForClassFields": true,
        "allowImportingTsExtensions": true,

        "skipLibCheck": false,
        "noEmit": true,

        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"]
        },

        "types": ["node", "react", "react-dom"]
    },
    "include": ["src"]
}
